{
  "brain": {
    "type": "field",
    "sensory_dim": 24,
    "motor_dim": 4,
    
    "// spatial_resolution": "Set to null for automatic hardware adaptation, or specify a value (3-8)",
    "spatial_resolution": null,
    
    "// features": "Enable/disable major brain features",
    "enhanced_dynamics": true,
    "attention_guidance": true,
    "hierarchical_processing": true,
    "attention_super_resolution": false
  },
  
  "memory": {
    "persistent_memory_path": "./robot_memory",
    "enable_persistence": true
  },
  
  "network": {
    "host": "0.0.0.0",
    "port": 9999,
    "monitoring_port": 9998
  },
  
  "logging": {
    "log_directory": "./logs",
    "log_level": "info",
    "enable_async_logging": true
  },
  
  "performance": {
    "// target_cycle_time_ms": "Biological timescale target (default: 150ms)",
    "target_cycle_time_ms": 150,
    
    "// force_settings": "Override automatic adaptation (use with caution)",
    "force_spatial_resolution": 4,
    "force_cycle_time_ms": null,
    "force_device": null
  }
}