{
  "brain": {
    "host": "192.168.1.231",
    "port": 9999,
    "timeout": 0.05
  },
  
  "vision": {
    "enabled": true,
    "resolution": [640, 480],
    "fps": 30,
    "format": "grayscale",
    "comment": "Full resolution 640x480 (307,200 pixels). With parallel vision thread, no longer blocks brain!"
  },
  
  "audio": {
    "enabled": true,
    "sample_rate": 16000,
    "channels": 1,
    "fft_bins": 256
  },
  
  "sensors": {
    "grayscale": {
      "enabled": true,
      "channels": [0, 1, 2],
      "adc_bits": 12,
      "max_adc_value": 4095
    },
    "ultrasonic": {
      "enabled": true,
      "max_range_cm": 400,
      "gpio_trigger": 23,
      "gpio_echo": 24,
      "us_per_cm": 58.0
    },
    "battery": {
      "enabled": true,
      "adc_channel": 6,
      "warning_voltage": 6.5,
      "critical_voltage": 6.0,
      "adc_to_voltage_multiplier": 10.0,
      "max_adc_value": 4095
    }
  },
  
  "safety": {
    "collision_distance_cm": 3,
    "cliff_threshold_adc": 3500,
    "max_speed": 0.8,
    "emergency_stop_on_disconnect": true
  },
  
  "performance": {
    "control_loop_hz": 20,
    "vision_processing": "gpu",
    "comment": "At 64x48 grayscale, we send 3,084 total values/frame = ~60KB/s at 20Hz (fits in TCP buffers!)"
  },
  
  "debug": {
    "verbose_logging": false,
    "save_vision_samples": false,
    "telemetry_enabled": true
  }
}