{
  "memory": {
    "persistent_memory_path": "./robot_memory",
    "enable_persistence": true,
    "checkpoint_interval_experiences": 100,
    "checkpoint_interval_seconds": 300,
    "max_checkpoints": 10,
    "use_compression": true
  },
  "logging": {
    "log_directory": "./logs"
  },
  "system": {
    "use_gpu": true,
    "adaptive_gpu_switching": true,
    "base_time_budget": 0.1
  }
}